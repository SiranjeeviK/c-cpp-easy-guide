// 4. Write a program to count the number of vowels and consonants in a string using a pointer.

#include<Stdio.h>
void count_vow_cons(char* str[]){
    int count_vow=0;
    int count_cons=0;
    char vow[20] = "Aeiouaeiou";
    for(int i = 0;*str[i] != '\0';i++){
        if(*str[i] == vow[i]){
            count_vow++;
        }
    }
}
int main(){
    char str[20] = "Prakash";
    count_vow_cons(&str);
}







